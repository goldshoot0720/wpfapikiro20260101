<Page x:Class="wpfkiro20260101.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:wpfkiro20260101"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="系統設定">

    <Page.Resources>
        <!-- 卡片樣式 -->
        <Style x:Key="SettingsCardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="25"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 標題樣式 -->
        <Style x:Key="SectionTitleStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="#374151"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
        </Style>

        <!-- 保存按鈕樣式 -->
        <Style x:Key="SaveButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="20,12"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4338CA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel Margin="30">
            <!-- 頁面標題 -->
            <TextBlock Text="系統設定" 
                       FontSize="28" 
                       FontWeight="Bold" 
                       Foreground="#111827" 
                       Margin="0,0,0,30"/>

            <!-- 後端服務設定 -->
            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel>
                    <TextBlock Text="後端服務設定" Style="{StaticResource SectionTitleStyle}"/>
                    <TextBlock Text="選擇您要使用的後端服務提供商" 
                               FontSize="14" 
                               Foreground="#6B7280" 
                               Margin="0,0,0,20"/>

                    <!-- Appwrite 選項 -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                        <RadioButton x:Name="AppwriteOption" 
                                     Checked="BackendOption_Checked"
                                     Content="Appwrite"
                                     FontWeight="Bold"
                                     Margin="0,0,0,5"/>
                        <TextBlock Text="• 可使用 2GB 容量" 
                                   Foreground="Green" 
                                   FontSize="12" 
                                   Margin="20,0,0,2"/>
                        <TextBlock Text="• 可使用 5GB 流量" 
                                   Foreground="Green" 
                                   FontSize="12" 
                                   Margin="20,0,0,0"/>
                    </StackPanel>

                    <!-- Supabase 選項 -->
                    <StackPanel Orientation="Vertical" Margin="0,0,0,15">
                        <RadioButton x:Name="SupabaseOption" 
                                     Checked="BackendOption_Checked"
                                     Content="Supabase"
                                     FontWeight="Bold"
                                     Margin="0,0,0,5"/>
                        <TextBlock Text="• 可使用 1GB 容量" 
                                   Foreground="Green" 
                                   FontSize="12" 
                                   Margin="20,0,0,2"/>
                        <TextBlock Text="• 可使用 5GB 流量" 
                                   Foreground="Green" 
                                   FontSize="12" 
                                   Margin="20,0,0,0"/>
                    </StackPanel>

                    <!-- NHost 選項 -->
                    <RadioButton x:Name="NHostOption" 
                                 Checked="BackendOption_Checked"
                                 Content="NHost"
                                 Margin="0,0,0,10"/>

                    <!-- Contentful 選項 -->
                    <RadioButton x:Name="ContentfulOption" 
                                 Checked="BackendOption_Checked"
                                 Content="Contentful"
                                 Margin="0,0,0,10"/>

                    <!-- Back4App 選項 -->
                    <RadioButton x:Name="Back4AppOption" 
                                 Checked="BackendOption_Checked"
                                 Content="Back4App"
                                 Margin="0,0,0,10"/>

                    <!-- MySQL 選項 -->
                    <RadioButton x:Name="MySQLOption" 
                                 Checked="BackendOption_Checked"
                                 Content="MySQL"
                                 Margin="0,0,0,10"/>
                </StackPanel>
            </Border>

            <!-- 連線設定 -->
            <Border Style="{StaticResource SettingsCardStyle}">
                <StackPanel>
                    <TextBlock Text="連線設定" Style="{StaticResource SectionTitleStyle}"/>
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- API URL -->
                        <TextBlock Grid.Row="0" Grid.Column="0" 
                                   x:Name="ApiUrlLabel"
                                   Text="API Endpoint:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,15,10" 
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="ApiUrlTextBox" 
                                 Grid.Row="0" Grid.Column="1" 
                                 Padding="10" 
                                 Margin="0,0,0,10"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Background="#F9FAFB"/>

                        <!-- Project ID -->
                        <TextBlock Grid.Row="1" Grid.Column="0" 
                                   x:Name="ProjectIdLabel"
                                   Text="Project ID:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,15,10" 
                                   VerticalAlignment="Center"/>
                        <TextBox x:Name="ProjectIdTextBox" 
                                 Grid.Row="1" Grid.Column="1" 
                                 Padding="10" 
                                 Margin="0,0,0,10"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Background="#F9FAFB"/>

                        <!-- Database ID (Appwrite 專用) -->
                        <TextBlock Grid.Row="2" Grid.Column="0" 
                                   x:Name="DatabaseIdLabel"
                                   Text="Database ID:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,15,10" 
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                        <TextBox x:Name="DatabaseIdTextBox" 
                                 Grid.Row="2" Grid.Column="1" 
                                 Padding="10" 
                                 Margin="0,0,0,10"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Background="#F9FAFB"
                                 Visibility="Collapsed"/>

                        <!-- Bucket ID (Appwrite 專用) -->
                        <TextBlock Grid.Row="3" Grid.Column="0" 
                                   x:Name="BucketIdLabel"
                                   Text="Bucket ID:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,15,10" 
                                   VerticalAlignment="Center"
                                   Visibility="Collapsed"/>
                        <TextBox x:Name="BucketIdTextBox" 
                                 Grid.Row="3" Grid.Column="1" 
                                 Padding="10" 
                                 Margin="0,0,0,10"
                                 BorderBrush="#D1D5DB"
                                 BorderThickness="1"
                                 Background="#F9FAFB"
                                 Visibility="Collapsed"/>

                        <!-- API Key -->
                        <TextBlock Grid.Row="4" Grid.Column="0" 
                                   Text="API Key:" 
                                   FontWeight="Bold" 
                                   Margin="0,0,15,10" 
                                   VerticalAlignment="Center"/>
                        <PasswordBox x:Name="ApiKeyPasswordBox" 
                                     Grid.Row="4" Grid.Column="1" 
                                     Padding="10" 
                                     Margin="0,0,0,10"
                                     BorderBrush="#D1D5DB"
                                     BorderThickness="1"
                                     Background="#F9FAFB"/>
                    </Grid>
                </StackPanel>
            </Border>

                    <!-- 操作按鈕 -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="TestSettingsButton" 
                        Content="測試設定" 
                        Style="{StaticResource SaveButtonStyle}"
                        Background="#8B5CF6"
                        Margin="0,0,10,0"
                        Click="TestSettings_Click"/>
                <Button x:Name="TestConnectionButton" 
                        Content="測試連線" 
                        Style="{StaticResource SaveButtonStyle}"
                        Background="#10B981"
                        Margin="0,0,10,0"
                        Click="TestConnection_Click"/>
                <Button x:Name="SaveSettingsButton" 
                        Content="儲存設定" 
                        Style="{StaticResource SaveButtonStyle}"
                        Click="SaveSettings_Click"/>
            </StackPanel>

            <!-- 狀態訊息 -->
            <TextBlock x:Name="StatusMessage" 
                       Margin="0,20,0,0" 
                       FontSize="14" 
                       HorizontalAlignment="Center"/>
        </StackPanel>
    </ScrollViewer>
</Page>