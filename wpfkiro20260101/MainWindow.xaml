<Window x:Class="wpfkiro20260101.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:wpfkiro20260101"
        mc:Ignorable="d"
        Title="鋒兄AI資訊系統" Height="800" Width="1200" WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <!-- 定義漸變背景 -->
        <LinearGradientBrush x:Key="MainBackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#6366F1" Offset="0"/>
            <GradientStop Color="#8B5CF6" Offset="0.5"/>
            <GradientStop Color="#A855F7" Offset="1"/>
        </LinearGradientBrush>
        
        <!-- 側邊欄按鈕樣式 -->
        <Style x:Key="SidebarButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,10"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="8" 
                                Margin="5">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- 卡片樣式 -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="CornerRadius" Value="12"/>
            <Setter Property="Padding" Value="20"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect Color="Black" Opacity="0.1" ShadowDepth="2" BlurRadius="8"/>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    
    <Grid Background="{StaticResource MainBackgroundBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        
        <!-- 左側導航欄 -->
        <Border Grid.Column="0" Background="#4338CA" CornerRadius="0,0,20,0">
            <StackPanel Margin="20">
                <!-- Logo區域 -->
                <Border Background="#EF4444" CornerRadius="8" Width="40" Height="40" Margin="0,0,0,20">
                    <TextBlock Text="鋒" FontSize="20" FontWeight="Bold" Foreground="White" 
                             HorizontalAlignment="Center" VerticalAlignment="Center"/>
                </Border>
                
                <TextBlock Text="鋒兄AI系統" FontSize="16" FontWeight="Bold" Foreground="White" Margin="0,0,0,30"/>
                
                <!-- 導航按鈕 -->
                <Button x:Name="HomeButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToHome">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🏠" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="內頁"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="DashboardButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToDashboard">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📊" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="儀表板"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="PhotosButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToPhotos">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🖼️" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="圖片庫"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="VideosButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToVideos">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🎬" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="影片庫"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="SubscriptionButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToSubscription">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="📋" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="訂閱管理"/>
                    </StackPanel>
                </Button>
                
                <Button x:Name="FoodButton" Style="{StaticResource SidebarButtonStyle}" Click="NavigateToFood">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="🍎" FontSize="16" Margin="0,0,10,0"/>
                        <TextBlock Text="食品管理"/>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        
        <!-- 主內容區域 -->
        <Grid Grid.Column="1" Margin="20">
            <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
