<Window x:Class="wpfkiro20260101.EditProfileDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="編輯設定檔" Height="700" Width="600"
        WindowStartupLocation="CenterOwner"
        Background="#F9FAFB">

    <Window.Resources>
        <!-- 按鈕樣式 -->
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#6366F1"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6">
                            <ContentPresenter HorizontalAlignment="Center" 
                                            VerticalAlignment="Center"
                                            Margin="{TemplateBinding Padding}"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#4F46E5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#4338CA"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 危險按鈕樣式 -->
        <Style x:Key="DangerButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#EF4444"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#DC2626"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 成功按鈕樣式 -->
        <Style x:Key="SuccessButtonStyle" TargetType="Button" BasedOn="{StaticResource ModernButtonStyle}">
            <Setter Property="Background" Value="#10B981"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#059669"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 輸入框樣式 -->
        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <!-- 密碼框樣式 -->
        <Style x:Key="ModernPasswordBoxStyle" TargetType="PasswordBox">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="BorderBrush" Value="#D1D5DB"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="FontSize" Value="13"/>
            <Style.Triggers>
                <Trigger Property="IsFocused" Value="True">
                    <Setter Property="BorderBrush" Value="#6366F1"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0" 
                   Text="編輯設定檔" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Foreground="#111827" 
                   Margin="0,0,0,20"/>

        <!-- 基本資訊 -->
        <Border Grid.Row="1" 
                Background="White" 
                CornerRadius="8" 
                Padding="20" 
                Margin="0,0,0,20"
                Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
            <StackPanel>
                <TextBlock Text="基本資訊" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="120"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Row="0" Grid.Column="0" Text="設定檔名稱：" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <TextBox x:Name="ProfileNameTextBox" 
                             Grid.Row="0" Grid.Column="1" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="1" Grid.Column="0" Text="描述：" VerticalAlignment="Top" Margin="0,5,0,10"/>
                    <TextBox x:Name="DescriptionTextBox" 
                             Grid.Row="1" Grid.Column="1" 
                             Style="{StaticResource ModernTextBoxStyle}"
                             Height="60"
                             TextWrapping="Wrap"
                             AcceptsReturn="True"
                             VerticalScrollBarVisibility="Auto"
                             Margin="0,0,0,10"/>

                    <TextBlock Grid.Row="2" Grid.Column="0" Text="後端服務：" VerticalAlignment="Center" Margin="0,0,0,10"/>
                    <ComboBox x:Name="BackendServiceComboBox" 
                              Grid.Row="2" Grid.Column="1" 
                              Padding="10"
                              FontSize="13"
                              SelectionChanged="BackendServiceComboBox_SelectionChanged"
                              Margin="0,0,0,10"/>

                    <CheckBox x:Name="SyncWithCurrentCheckBox" 
                              Grid.Row="3" Grid.Column="1" 
                              Content="與當前連線設定保持同步" 
                              IsChecked="True"
                              Margin="0,5,0,0"
                              Checked="SyncWithCurrentCheckBox_Checked"
                              Unchecked="SyncWithCurrentCheckBox_Unchecked"/>
                </Grid>
            </StackPanel>
        </Border>

        <!-- 連線設定 -->
        <Border Grid.Row="2" 
                Background="White" 
                CornerRadius="8" 
                Padding="20"
                Effect="{StaticResource {x:Static SystemParameters.DropShadowKey}}">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        
                        <TextBlock Grid.Column="0" Text="連線設定" FontSize="16" FontWeight="SemiBold" Margin="0,0,0,15"/>
                        
                        <Button x:Name="LoadCurrentSettingsButton" 
                                Grid.Column="1" 
                                Content="載入當前設定" 
                                Style="{StaticResource ModernButtonStyle}"
                                FontSize="11"
                                Padding="10,5"
                                Click="LoadCurrentSettings_Click"/>
                    </Grid>
                    
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="120"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <TextBlock x:Name="ApiUrlLabel" Grid.Row="0" Grid.Column="0" Text="API URL：" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox x:Name="ApiUrlTextBox" 
                                 Grid.Row="0" Grid.Column="1" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="0,0,0,10"/>

                        <TextBlock x:Name="ProjectIdLabel" Grid.Row="1" Grid.Column="0" Text="Project ID：" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox x:Name="ProjectIdTextBox" 
                                 Grid.Row="1" Grid.Column="1" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="0,0,0,10"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="API Key：" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <PasswordBox x:Name="ApiKeyPasswordBox" 
                                     Grid.Row="2" Grid.Column="1" 
                                     Style="{StaticResource ModernPasswordBoxStyle}"
                                     Margin="0,0,0,10"/>

                        <!-- Appwrite 專用欄位 -->
                        <TextBlock x:Name="DatabaseIdLabel" Grid.Row="3" Grid.Column="0" Text="Database ID：" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox x:Name="DatabaseIdTextBox" 
                                 Grid.Row="3" Grid.Column="1" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="0,0,0,10"/>

                        <TextBlock x:Name="BucketIdLabel" Grid.Row="4" Grid.Column="0" Text="Bucket ID：" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox x:Name="BucketIdTextBox" 
                                 Grid.Row="4" Grid.Column="1" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="0,0,0,10"/>

                        <TextBlock x:Name="FoodCollectionIdLabel" Grid.Row="5" Grid.Column="0" Text="Food Table：" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox x:Name="FoodCollectionIdTextBox" 
                                 Grid.Row="5" Grid.Column="1" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="0,0,0,10"/>

                        <TextBlock x:Name="SubscriptionCollectionIdLabel" Grid.Row="6" Grid.Column="0" Text="Subscription Table：" VerticalAlignment="Center" Margin="0,0,0,10"/>
                        <TextBox x:Name="SubscriptionCollectionIdTextBox" 
                                 Grid.Row="6" Grid.Column="1" 
                                 Style="{StaticResource ModernTextBoxStyle}"
                                 Margin="0,0,0,10"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>

        <!-- 按鈕區域 -->
        <Grid Grid.Row="3" Margin="0,20,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock x:Name="StatusText" 
                       Grid.Column="0" 
                       Text="" 
                       VerticalAlignment="Center" 
                       FontSize="12" 
                       Foreground="#6B7280"/>

            <Button x:Name="CancelButton" 
                    Grid.Column="1" 
                    Content="取消" 
                    Style="{StaticResource DangerButtonStyle}"
                    Margin="0,0,10,0"
                    Click="Cancel_Click"/>

            <Button x:Name="SaveButton" 
                    Grid.Column="2" 
                    Content="儲存" 
                    Style="{StaticResource SuccessButtonStyle}"
                    Click="Save_Click"/>
        </Grid>
    </Grid>
</Window>