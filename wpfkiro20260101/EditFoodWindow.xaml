<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="wpfkiro20260101.EditFoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="編輯食品" Height="650" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Background="White">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 標題 -->
            <TextBlock Grid.Row="0" Text="編輯食品" FontSize="24" FontWeight="Bold" 
                     HorizontalAlignment="Center" Margin="0,20,0,30" Foreground="#333333"/>

            <!-- 表單內容 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20,0">
                    <!-- 食品名稱 -->
                    <TextBlock Text="食品名稱 *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="FoodNameTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- 商店 -->
                    <TextBlock Text="商店" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="ShopTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- 價格 -->
                    <TextBlock Text="價格 (NT$)" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="PriceTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- 到期日期 -->
                    <TextBlock Text="到期日期" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="ExpiryDatePicker" Height="35" Margin="0,0,0,15"
                              BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- 照片路徑 -->
                    <TextBlock Text="照片路徑" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="PhotoTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- 備註 -->
                    <TextBlock Text="備註" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="NotesTextBox" Height="80" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCCCCC" BorderThickness="1" TextWrapping="Wrap" 
                           VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </ScrollViewer>

            <!-- 按鈕區域 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" 
                      Margin="20,20,20,20">
                <Button x:Name="CancelButton" Content="取消" Width="80" Height="35" 
                      Background="#6B7280" Foreground="White" BorderThickness="0" 
                      Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button x:Name="SaveButton" Content="儲存變更" Width="100" Height="35" 
                      Background="#10B981" Foreground="White" BorderThickness="0" 
                      Click="SaveFood_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>