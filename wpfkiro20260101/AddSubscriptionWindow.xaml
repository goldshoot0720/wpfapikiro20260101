<Window x:Class="wpfkiro20260101.AddSubscriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加訂閱" Height="650" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Background="White">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 標題 -->
            <TextBlock Grid.Row="0" Text="添加新訂閱" FontSize="24" FontWeight="Bold" 
                     HorizontalAlignment="Center" Margin="0,20,0,30" Foreground="#333"/>

            <!-- 表單內容 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20,0">
                    <!-- 服務名稱 -->
                    <TextBlock Text="服務名稱 *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="ServiceNameTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCC" BorderThickness="1"/>

                    <!-- 網站 -->
                    <TextBlock Text="網站" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="WebsiteTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCC" BorderThickness="1"/>

                    <!-- 月費 -->
                    <TextBlock Text="月費 (NT$) *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="MonthlyFeeTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCC" BorderThickness="1"/>

                    <!-- 下次付款日期 -->
                    <TextBlock Text="下次付款日期 *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="NextPaymentDatePicker" Height="35" Margin="0,0,0,15"
                              BorderBrush="#CCC" BorderThickness="1"/>

                    <!-- 備註 -->
                    <TextBlock Text="備註" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="NotesTextBox" Height="80" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCC" BorderThickness="1" TextWrapping="Wrap" 
                           VerticalScrollBarVisibility="Auto"/>
                </StackPanel>
            </ScrollViewer>

            <!-- 按鈕區域 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" 
                      Margin="20,20,20,20">
                <Button x:Name="CancelButton" Content="取消" Width="80" Height="35" 
                      Background="#6B7280" Foreground="White" BorderThickness="0" 
                      Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button x:Name="ConfirmButton" Content="確定新增" Width="100" Height="35" 
                      Background="#10B981" Foreground="White" BorderThickness="0" 
                      Click="AddSubscription_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>