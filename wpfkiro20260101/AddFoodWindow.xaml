<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="wpfkiro20260101.AddFoodWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="添加食品" Height="650" Width="450"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Background="White">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 標題 -->
            <TextBlock Grid.Row="0" Text="添加新食品" FontSize="24" FontWeight="Bold" 
                     HorizontalAlignment="Center" Margin="0,20,0,30" Foreground="#333333"/>

            <!-- 表單內容 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="20,0">
                    <!-- 食品名稱 -->
                    <TextBlock Text="食品名稱 *" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="FoodNameTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- 商店 -->
                    <TextBlock Text="商店" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="ShopTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- 價格 -->
                    <TextBlock Text="價格 (NT$)" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="PriceTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- 數量 -->
                    <TextBlock Text="數量" FontWeight="Bold" Margin="0,0,0,5"/>
                    <TextBox x:Name="QuantityTextBox" Height="35" Padding="10" Margin="0,0,0,15"
                           BorderBrush="#CCCCCC" BorderThickness="1" Text="1"/>

                    <!-- 到期日期 -->
                    <TextBlock Text="到期日期" FontWeight="Bold" Margin="0,0,0,5"/>
                    <DatePicker x:Name="ExpiryDatePicker" Height="35" Margin="0,0,0,15"
                              BorderBrush="#CCCCCC" BorderThickness="1"/>

                    <!-- 照片 URL -->
                    <TextBlock Text="照片 URL (網路圖片)" FontWeight="Bold" Margin="0,0,0,5"/>
                    <Grid Margin="0,0,0,15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <TextBox x:Name="PhotoUrlTextBox" Grid.Column="0" Height="35" Padding="10" 
                               BorderBrush="#CCCCCC" BorderThickness="1"
                               TextChanged="PhotoUrl_TextChanged"
                               ToolTip="輸入圖片的網路 URL，例如：https://example.com/image.jpg"/>
                        <Button x:Name="PreviewButton" Grid.Column="1" Content="重新載入" Width="80" Height="35"
                              Background="#3B82F6" Foreground="White" BorderThickness="0" 
                              Margin="5,0,0,0" Click="PreviewImage_Click" IsEnabled="False"/>
                    </Grid>
                    
                    <!-- 圖片預覽 -->
                    <Border x:Name="ImagePreviewBorder" BorderBrush="#CCCCCC" BorderThickness="1" 
                          Margin="0,0,0,15" Visibility="Collapsed" MaxHeight="200">
                        <Grid>
                            <Image x:Name="ImagePreview" Stretch="Uniform" MaxHeight="180"/>
                            <TextBlock x:Name="LoadingText" Text="載入中..." HorizontalAlignment="Center" 
                                     VerticalAlignment="Center" FontSize="14" Foreground="#666666" 
                                     Visibility="Collapsed"/>
                            <TextBlock x:Name="ErrorText" Text="無法載入圖片" HorizontalAlignment="Center" 
                                     VerticalAlignment="Center" FontSize="14" Foreground="#EF4444" 
                                     Visibility="Collapsed"/>
                        </Grid>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- 按鈕區域 -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" 
                      Margin="20,20,20,20">
                <Button x:Name="CancelButton" Content="取消" Width="80" Height="35" 
                      Background="#6B7280" Foreground="White" BorderThickness="0" 
                      Margin="0,0,10,0" Click="Cancel_Click"/>
                <Button x:Name="AddButton" Content="確定新增" Width="100" Height="35" 
                      Background="#10B981" Foreground="White" BorderThickness="0" 
                      Click="AddFood_Click"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>